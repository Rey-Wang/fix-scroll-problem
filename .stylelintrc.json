{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules"
  ],
  "rules": {
    "selector-class-pattern": "^(?:ant-.*|[a-z][a-z0-9]*(?:_[a-z0-9]+)*)$",
    "custom-property-pattern": [
      "^[a-z][a-z0-9]*(?:-[a-z0-9]+)*$",
      { "severity": "warning" }
    ],
    "no-descending-specificity": null,
    "color-hex-case": "upper",
    "block-no-empty": null
  },
  "ignoreFiles": ["**/kendo.css"]
}
