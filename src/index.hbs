<!doctype html>
<html lang="en">
  <head>
    <link rel="shortcut icon" href="./lib/images/favicon.ico">
    <!-- Just double-make sure that the encoding is set -->
    <meta charset="utf-8">
    <!-- Set the viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{{htmlWebpackPlugin.options.title}}</title>
    {{#each htmlWebpackPlugin.files.css as |cssFile|}}
      <link
        href="{{cssFile}}"
        crossorigin="{{webpackConfig.output.crossOriginLoading}}"
        rel="stylesheet"
       />
    {{/each}}
    {{#each htmlWebpackPlugin.options.externals as |external|}}
      <script src="{{external}}"></script>
    {{/each}}
    {{#if htmlWebpackPlugin.options.dataDog.applicationId}}
    <script
        src="https://www.datadoghq-browser-agent.com/datadog-rum.js"
        type="text/javascript"
    ></script>
    <script>
        window.DD_RUM &&
            // ignore automation tests
            !window.navigator.webdriver &&
            window.DD_RUM.init({
              applicationId: '{{htmlWebpackPlugin.options.dataDog.applicationId}}',
              clientToken: '{{htmlWebpackPlugin.options.dataDog.clientToken}}',
              site: 'datadoghq.com',
              version: '{{htmlWebpackPlugin.options.version}}',
              env: '{{htmlWebpackPlugin.options.nextEnv}}',
              sampleRate: 100,
              trackInteractions: false,
            });
    </script>
    {{/if}}
    {{#each htmlWebpackPlugin.options.remoteJsFiles as |remoteFile|}}
      <script
        src="{{remoteFile}}"
        defer
      ></script>
    {{/each}}
    {{#each htmlWebpackPlugin.files.js as |jsFile|}}
      <script
        src="{{jsFile}}"
        crossorigin="{{webpackConfig.output.crossOriginLoading}}"
        defer
      ></script>
    {{/each}}
  </head>
  <body>
    {{#if htmlWebpackPlugin.options.showOverlay}}
      <div class='overlay'>
        <img src="./lib/images/logo-blue.svg" alt="">
      </div>
    {{/if}}
    <!-- App mount point which should replace everything on the page when mounted -->
    <div id="{{htmlWebpackPlugin.options.appMountId}}"></div>
  </body>
</html>
